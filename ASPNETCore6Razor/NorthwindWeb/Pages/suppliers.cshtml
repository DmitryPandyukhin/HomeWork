@page
@model NorthwindWeb.Pages.SuppliersModel
@using Packt.Shared;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    <h1 class="display-2">Поставщики</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Название организации</th>
                <th>Страна</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Supplier supplier in Model.Suppliers)
            {
                <tr>
                    <td>@supplier.CompanyName</td>
                    <td>@supplier.Country</td>
                    <td>@supplier.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <p>Введите название нового поставщика:</p>
    <form metod="POST">
        <!-- Привязка дынных к модели на странице Razor -->
        <div><input asp-for="Supplier.CompanyName"/></div>
        <input type="submit" />
    </form>
</div>